
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@model List<Admin>
<section class="section">
    <div class="section-body">
        <div class="row mt-sm-4">
            <div class="col-12 col-md-12 col-lg-4">
                <div class="card author-box">
                    <div class="card-body">
                        <div class="author-box-center">
                            <form asp-action="ChangeProfileImage" enctype="multipart/form-data" method="post">
                                <img src="@("~/AdminImages/"+Model[0].admin_image)" asp-append-version="true" class="rounded-circle author-box-picture" />
                                <div class="author-box-name">
                                    <a href="@Url.Action("profile","admin")">@Model[0].admin_name</a>
                                </div>
                                <input type="hidden" class="form-control" name="admin_id" value="@Model[0].admin_id"><br />
                                <input type="hidden" class="form-control" name="admin_name" value="@Model[0].admin_name">
                                <input type="hidden" class="form-control" name="admin_email" value="@Model[0].admin_email">
                                <input type="hidden" class="form-control" name="admin_password" value="@Model[0].admin_password">
                                <input type="file" class="form-control" name="admin_image" value="@Model[0].admin_image">

                                <div class="clearfix"></div><br />
                                <input type="submit" class="btn btn-primary" value="Update Image" />
                            </form>


                        </div>
                        <div class="text-center">
                            <a href="#" class="btn btn-social-icon mr-1 btn-facebook">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="btn btn-social-icon mr-1 btn-twitter">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="btn btn-social-icon mr-1 btn-github">
                                <i class="fab fa-github"></i>
                            </a>
                            <a href="#" class="btn btn-social-icon mr-1 btn-instagram">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <div class="w-100 d-sm-none"></div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-12 col-md-12 col-lg-8">
                <div class="card">
                    <div class="padding-20">
                        <ul class="nav nav-tabs" id="myTab2" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab2" data-toggle="tab" href="#about" role="tab"
                                   aria-selected="true">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="profile-tab2" data-toggle="tab" href="#settings" role="tab"
                                   aria-selected="false">Update Profile</a>
                            </li>
                        </ul>
                        <div class="tab-content tab-bordered" id="myTab3Content">
                            <div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="home-tab2">
                                <div class="row">
                                    <div class="col-md-3 col-6 b-r">
                                        <strong>Full Name</strong>
                                        <br>
                                        <p class="text-muted">@Model[0].admin_name</p>
                                    </div>
                                    <div class="col-md-3 col-6 b-r">
                                        <strong>Email</strong>
                                        <br>
                                        <p class="text-muted">@Model[0].admin_email</p>
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <strong>Location</strong>
                                        <br>
                                        <p class="text-muted">Pakistan</p>
                                    </div>
                                </div>
                                @*   <p class="m-t-30">
                                Completed my graduation in Arts from the well known and
                                renowned institution
                                of India – SARDAR PATEL ARTS COLLEGE, BARODA in 2000-01, which was
                                affiliated
                                to M.S. University. I ranker in University exams from the same
                                university
                                from 1996-01.
                                </p>   *@
                            </div>
                            <div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="profile-tab2">
                                <form method="post" class="needs-validation">
                                    <div class="card-header">
                                        <h4>Update Profile</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="form-group col-md-6 col-12">
                                                <label>Name</label>
                                                <input type="hidden" class="form-control" name="admin_id" value="@Model[0].admin_id">
                                                <input type="text" class="form-control" name="admin_name" value="@Model[0].admin_name">
                                                <div class="invalid-feedback">
                                                    Please fill in the first name
                                                </div>
                                            </div>
                                            <div class="form-group col-md-6 col-12">
                                                <label>Password</label>
                                                <input type="password" class="form-control" name="admin_password" value="@Model[0].admin_password">
                                                <div class="invalid-feedback">
                                                    Please fill in the last name
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-md-12 col-12">
                                                <label>Email</label>
                                                <input type="email" class="form-control" name="admin_email" value="@Model[0].admin_email">
                                                <div class="invalid-feedrback">
                                                    Please fill in the email
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="card-footer text-center">
                                        <input type="hidden" class="form-control" name="admin_image" value="@Model[0].admin_image">

                                        <input type="submit" class="btn btn-primary" value="Update Profile" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




