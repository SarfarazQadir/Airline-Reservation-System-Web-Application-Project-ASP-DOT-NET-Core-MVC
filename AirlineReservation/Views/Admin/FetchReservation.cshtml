
@{
    ViewData["Title"] = "FetchReservation";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@model List<Reservation>

<section class="section">
    <div class="section-body">
        <div class="row mt-sm-4">
            <div class="col-12 ">
                <a href="@Url.Action("AddReservation","Admin")" class="btn btn-primary align-right">Add New Reservation</a>
                <br /><br />
                <div class="card">
                    <div class="card-header">
                        <h4>Reservation Details</h4>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-md">
                                <tr>
                                    <th>Reservation Id</th>
                                    <th>User Id</th>
                                    <th>Flight Id</th>
                                    <th>Departure Date</th>
                                    <th>Trip Type</th>
                                    <th>Status</th>
                                    <th>Booking Number</th>
                                    <th>Confirmation Number</th>
                                    <th>Total Price</th>
                                    <th>Mileage</th>
                                    <th colspan="2">Action</th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ReservationId</td>
                                        <td>@item.UserId</td>
                                        <td>@item.FlightId</td>
                                        <td>@item.DepartureDate</td>
                                        <td>@item.TripType</td>
                                        <td>@item.Status</td>
                                        <td>@item.BlockingNumber</td>
                                        <td>@item.ConfirmationNumber</td>
                                        <td>@item.TotalPrice</td>
                                        <td>@item.Mileage</td>
                                        <td>
                                            <div class="dropdown">
                                                <a href="#" data-toggle="dropdown" class="btn btn-warning dropdown-toggle">Options</a>
                                                <div class="dropdown-menu">
                                                    <a href="@Url.Action("UpdateReservation","admin",new{id=item.ReservationId})" class="dropdown-item has-icon"><i class="far fa-edit"></i> Edit</a>
                                                    <a href="@Url.Action("DeleteReservation","admin",new{id=item.ReservationId})" class="dropdown-item has-icon text-danger">
                                                        <i class="far fa-trash-alt"></i>
                                                        Delete
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <nav class="d-inline-block">
                            <ul class="pagination mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1"><i class="fas fa-chevron-left"></i></a>
                                </li>
                                <li class="page-item active">
                                    <a class="page-link" href="#">
                                        1 <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">2</a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
